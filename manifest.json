{
  "name": "Hello Extensions",
  "description": "Base Level Extension",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "hello.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "*://youtube.com/*",
        "*://www.youtube.com/*",
        "*://m.youtube.com/*"
      ],
      "exclude_matches": [
        "*://*.music.youtube.com/*"
      ],
      "js": ["content/youtube.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["download.html"],
      "matches": [
        "*://youtube.com/*",
        "*://www.youtube.com/*",
        "*://m.youtube.com/*"
      ],
      "exclude_matches": [
        "*://*.music.youtube.com/*"
      ]
    }
  ]
}